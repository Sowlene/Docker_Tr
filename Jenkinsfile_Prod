pipeline {
  agent any
node {
 properties([
  pipelineTriggers([
   [$class: 'GenericTrigger',
    genericVariables: [
     [expressionType: 'JSONPath', key: 'COMMIT_ID', value: '$.head_commit.id']
    ]
    ])
  stages {
    stage('Welcome') {
      steps {
        parallel(
          "Welcome": {
           sh 'echo $COMMIT_ID'
          },
          "Situation": {
            sh 'pwd && who && ls -Shal #l not pass'
            
          }
        )
      }
    }
    stage('Build') {
      steps {
        parallel(
          "Autorisations": {
            sh 'ls -lhS /var/run/ | grep docker.sock'
            echo 'Si un message concernant les permissions apparait faites un chmod 770 de ce fichier'
            
          },
          "Build Docker_PROD": {
            sh 'cd Debian_Prod/ && cat Dockerfile && docker build -t solene/docker_trac_prod:latest .'
            
          }
        )
      }
    }
    stage('End') {
      steps {
        echo 'We will try this way !'
      }
    }
  }
}
}
